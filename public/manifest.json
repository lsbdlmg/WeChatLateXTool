{
  "manifest_version": 3,
  "name": "SCUT-WeChatPublicPlatform-LateXTool",
  "version": "1.0.0",
  "description": "",

  "permissions": ["activeTab", "scripting", "tabs"],

  "content_scripts": [
    {
      "matches": ["*://mp.weixin.qq.com/*", "<all_urls>"],
      "js": ["assets/js/contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/**/*", "mathjax/es5/**/*", "mathjax/es5/*"],
      "matches": ["*://mp.weixin.qq.com/*", "<all_urls>"]
    }
  ],

  "action": {
    "default_title": "微信公众平台LateX公式插件-SCUT",
    "default_icon": {
      "16": "assets/images/icon-16.png",
      "32": "assets/images/icon-32.png",
      "48": "assets/images/icon-48.png",
      "128": "assets/images/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  }
}
